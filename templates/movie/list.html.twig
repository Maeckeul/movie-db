{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Films
{% endblock %}

{% block body %} 

<div class="d-flex justify-content-between align-items-start mt-5">
    <h1>Films</h1>
    <a href="{{ path('movie_add') }}" class="btn btn-primary">Ajouter un film</a>
</div>
<div class="mt-5">
    {% if app.request.get('search') %}
    <div class="alert alert-info" role="alert">
        Resultat de la recherche pour : "{{ app.request.get('search') }}"
        <a href="{{ path('movie_list') }}" class="alert-link">Annuler la recherche</a>
    </div>
    {% endif %}
    <div class="list-group mt-5 mb-5">
        {% for movie in movies %}
        <a href="{{ path('movie_view', {'id': movie.id}) }}" class="list-group-item list-group-item-action">
            {{ movie.title }}
        </a>
        {% endfor %}
    </div>
</div>
{% endblock %}
