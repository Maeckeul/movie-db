{% extends 'base.html.twig' %}

{% block title %}

    {{ parent() }} - Modifier une catégorie

{% endblock %}

{% block body %}

<div class="d-flex justify-content-between align-items-start mt-5">
    <h1>Modifier la catégorie {{ category.label }}</h1>
    <a href="{{ path('category_delete', {'id' : category.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">
        Supprimer la catégorie {{ category.label }}
    </a>
</div>

{{ form_start(form) }}

{{ form_widget(form) }}

<a class="btn btn-primary" href="{{ path('category_list', {'id' : category.id}) }}">Annuler</a>
<button class="btn btn-primary" type="submit">Modifier</button>

{{ form_end(form) }}

{% endblock %}