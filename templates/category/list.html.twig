{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Catégories
{% endblock %}

{% block body %}

<div class="d-flex justify-content-between align-items-start mt-5">
    <h1>Catégories</h1>
    <a href="{{ path('category_add') }}" class="btn btn-primary">Ajouter une catégorie</a>
</div>

<div class="list-group mt-5 mb-5">
    {% for category in categories %}
    <a href="{{ path('category_view', {'id': category.id}) }}" class="list-group-item list-group-item-action">
        {{ category.label }}
    </a>
    {% endfor %}
</div>
{% endblock %}